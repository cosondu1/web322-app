<div class="row">
    {{#if data.post}}
    <section class="main col-md-9">
        <article>
            <h2>{{data.post.title}}</h2>
            <img src="{{data.post.featureImage}}" alt="feature Image" style="width:100%" />
            <br /><br />
            {{#safeHTML data.post.body}}
            {{/safeHTML}}
            <br /><br />
            <strong>Category:</strong> {{data.post.category}}<br />
            <strong>Last Updated:</strong> {{data.post.postdate}}
        </article>
    </section>
    {{else}}
    <div class="col-md-12 text-center">
        <h2>{{data.message}}</h2>
        <p>Please try another Post / Category</p>
    </div>
    {{/if}}

    {{#if data.posts}}
    <aside class="col-md-3">
        <br /><br />
        <h4>Posts</h4>
        <ul class="list-group">
            {{#each data.posts as |post|}}
            <a href="/blog/{{post.id}}?category={{../viewingCategory}}" class="list-group-item">{{post.title}}</a>
            {{/each}}
        </ul>
    </aside>
    {{/if}}

    {{#if data.categories}}
    <aside class="col-md-3">
        <h4>Categories</h4>
        <ul class="list-group">
            {{#each data.categories as |category|}}
            <a href="/blog?category={{category.id}}" class="list-group-item">{{category.category}}</a>
            {{/each}}
        </ul>
    </aside>
    {{/if}}
</div>
