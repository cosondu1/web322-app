<div class="row">
    <div class="col-md-12">
        <h2>Categories</h2>
        <hr />

        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Category ID</th>
                        <th>Category Name</th>
                        <th></th> <!-- Empty column for the "remove" button -->
                    </tr>
                </thead>
                <tbody>
                    {{#each categories}}
                    <tr>
                        <td><a href="/posts?category={{this.id}}">{{this.id}}</a></td>
                        <td><a href="/posts?category={{this.id}}">{{this.name}}</a></td>
                        <td>
                            <a href="/categories/delete/{{this.id}}" class="btn btn-danger">Remove</a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>

    </div>
     {{#unless categories}}
        <div class="col-md-12 text-center">
            <strong>{{message}}</strong>
        </div>
    {{/unless}}
</div>
